"""
Transport Models
"""
from django.db import models
from django.contrib.auth import get_user_model
from apps.core.models import TimeStampedModel

User = get_user_model()


class TransportItem(TimeStampedModel):
    """
    Main model for transport module
    Customize this model based on your requirements
    """
    name = models.CharField(max_length=255, help_text="Name of the item")
    description = models.TextField(blank=True, help_text="Detailed description")
    status = models.CharField(
        max_length=20,
        choices=[
            ('active', 'Active'),
            ('inactive', 'Inactive'),
            ('pending', 'Pending'),
        ],
        default='active',
        db_index=True
    )
    created_by = models.ForeignKey(
        User, 
        on_delete=models.SET_NULL, 
        null=True, 
        blank=True,
        related_name='transport_created_items'
    )
    
    class Meta:
        db_table = 'transport_items'
        ordering = ['-created_at']
        verbose_name = 'Transport Item'
        verbose_name_plural = 'Transport Items'
    
    def __str__(self):
        return self.name
