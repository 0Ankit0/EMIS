# Application Configuration
APP_NAME=EMIS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-min-50-chars

# Server
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://emis_user:emis_password@localhost:5432/emis_db
DB_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=EMIS API
API_DESCRIPTION=Educational Management Information System API
API_VERSION=1.0.0

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@emis.edu
SMTP_FROM_NAME=EMIS

# SMS Configuration
SMS_PROVIDER=
SMS_API_KEY=
SMS_FROM_NUMBER=

# External APIs
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=
DIGILOCKER_CLIENT_ID=
DIGILOCKER_CLIENT_SECRET=

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=30

# Compliance
GDPR_ENABLED=True
AUDIT_LOG_ENABLED=True
DATA_RETENTION_DAYS=2555

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_PASSWORD_RESET=True
ENABLE_TWO_FACTOR_AUTH=False
